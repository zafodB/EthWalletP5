<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/wallet_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="36dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/public_key_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/wallet_name_textview"
            android:layout_marginTop="50dp"
            android:text="Public key" />

        <TextView
            android:id="@+id/wallet_public_key_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/public_key_label"
            android:layout_marginTop="22dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textIsSelectable="true"
            tools:text="myWallet" />

        <TextView
            android:id="@+id/account_balance_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/wallet_public_key_textview"
            android:text="Account Balance" />

        <TextView
            android:id="@+id/eth_balance_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_balance_label"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:text="TextView"
            android:textAppearance="@android:style/TextAppearance.Material.Headline"
            android:textStyle="bold"
            tools:text="0.123 eth" />

        <Button
            android:id="@+id/send_transaction_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eth_balance_textview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Send Ether"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/createBackupBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:text="Create Backup"
            android:textAllCaps="false" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>