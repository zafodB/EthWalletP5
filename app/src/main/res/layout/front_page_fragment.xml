<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="36dp"
            android:layout_centerHorizontal="true"
            android:text="Eth Wallet P5"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="176dp"
            android:layout_height="53dp"
            android:layout_marginTop="52dp"
            android:layout_centerHorizontal="true"
            android:text="Choose an existing wallet:"
            android:layout_below="@+id/title" />

        <ListView
            android:id="@+id/listWallets"
            android:layout_width="314dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView2"/>


        <Button
            android:id="@+id/createWalletBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Or create a new one!"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/listWallets"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/createBackupBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Create Backup"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/createWalletBtn"
            android:textAllCaps="false" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>