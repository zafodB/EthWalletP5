<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/create_backup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:text="Enter your credentials to create backup"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/backup_email_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_backup_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:ems="10"
            android:hint="Your Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/backup_password_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/backup_email_input"
            android:layout_below="@+id/backup_email_input"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:hint="New Password (at least 6 characters)"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/create_backup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/backup_password_input"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:text="Create Backup"
            android:textAllCaps="false" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>