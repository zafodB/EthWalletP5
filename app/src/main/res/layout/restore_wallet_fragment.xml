<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/restore_wallet_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:text="Enter your credentials to restore wallet"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/backup_email_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/restore_wallet_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Your Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/backup_password_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/backup_email_input"
            android:layout_below="@+id/backup_email_input"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Your Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/restore_wallet_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Restore Wallet"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/restored_wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/backup_password_input"
            android:layout_below="@+id/backup_password_input"
            android:layout_marginTop="19dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Create wallet name" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>